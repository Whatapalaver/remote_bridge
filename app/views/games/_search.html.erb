<%= form_with url: search_path, class: "bg-white shadow-md rounded px-2 pt-2 pb-2 m-2", method: :get do |form| %>
  <%= form.number_field :id, min: 1, max: 500, placeholder: "Game ID", class: "shadow appearance-none w-40 order rounded py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  <%= form.submit "Search", name: "", class: "p-2 shadow rounded relative bg-gray-800 p-1 text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800" %>
<% end %>
